<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../partials/headAdmin.ejs') %>
	</head>
	<body class="hold-transition login-page">
		<div class="login-box">
			<!-- /.login-logo -->
			<%- include('../partials/mensajesFlash.ejs')%>
			<div class="card card-outline card-primary">
				<div class="card-header text-center">
					<a href="<%= ROUTES.ADMIN %>" class="h1"
						><b>Iniciar</b> Sesión</a
					>
				</div>
				<div class="card-body">
					<form
						action="<%= ROUTES.LOGIN %>"
						method="POST"
						class="mb-2"
					>
						<input
							type="hidden"
							name="_csrf"
							value="<%= csrfToken %>"
						/>
						<div class="input-group mb-3">
							<input
								type="email"
								name="email"
								class="form-control"
								placeholder="Email"
								value="<%= cookie ? cookie.email : fields ? fields.email : '' %>"
							/>
							<div class="input-group-append">
								<div class="input-group-text">
									<span class="fas fa-envelope"></span>
								</div>
							</div>
						</div>
						<div class="input-group mb-3">
							<input
								type="password"
								name="password"
								class="form-control"
								placeholder="password"
							/>
							<div class="input-group-append">
								<div class="input-group-text">
									<span class="fas fa-lock"></span>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-7">
								<% if(!cookie){ %>
								<div class="icheck-primary">
									<input
										type="checkbox"
										name="remember"
										id="remember"
									/>
									<label for="remember">
										Recordar datos
									</label>
								</div>
								<% } %>
							</div>
							<!-- /.col -->
							<div class="col-5">
								<button
									type="submit"
									class="btn btn-primary btn-block"
								>
									Iniciar Sesión
								</button>
							</div>
							<!-- /.col -->
						</div>
					</form>

					<p class="mb-1">
						<a href="<%= ROUTES.FORGOT_PASSWORD %>"
							>¿Olvidaste tu password?</a
						>
					</p>
				</div>
				<!-- /.card-body -->
			</div>
			<!-- /.card -->
		</div>
		<!-- /.login-box -->

		<%- include('../layouts/scriptAdmin.ejs') %>
	</body>
</html>
